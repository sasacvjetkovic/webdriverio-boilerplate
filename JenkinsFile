pipeline {
    agent any

    stages {
        stage("Checkout Code") {
            checkout scm
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'yarn install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}