pipeline {
    agent {
        docker { 
            args '-u root:root'
            image 'node:8'
        } 
    }
    environment {
        HOME = '.'
    }
    stages {
        stage('Node version') {
            steps {
                sh 'node --version'
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'yarn install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}