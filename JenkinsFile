pipeline {
    agent any
    stages {
        stage('Where is npm') {
            steps {
                sh 'which npm'
            }
        }
        stage('Install yarn') {
            steps {
                sh 'npm install -g yarn'
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'yarn install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}